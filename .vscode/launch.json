    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\tests\\ecs.test.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            
            "name": "Run Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "request": "launch",
            "command": "npm run test",
        }
    ]
}